mixin ui-range(mods)
  -
    const baseName = 'ui-range'
    let allMods = ''
    if (typeof mods !== 'undefined' && mods) {
      const modsList = mods.split(',')
      for (const element of modsList) {
        allMods += element.trim()[0] === '-' ? ' ' + baseName + element.trim() : ' ' + element.trim() + '__' + baseName
      }
      allMods = allMods.trim()
    }

  .ui-range(class=allMods)&attributes(attributes)
    .ui-range__head
      .ui-range__item
        .ui-range__label от
        .ui-range__control
          .ui-range__input-val
          input.ui-range__input(type='text')
        .ui-range__unit ₽
      .ui-range__item
        .ui-range__label до
        .ui-range__control
          .ui-range__input-val
          input.ui-range__input(type='text')
        .ui-range__unit ₽
    .ui-range__body
    block
